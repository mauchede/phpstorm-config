#!/bin/sh
set -e -u -x

# Check environment

fail() {
    echo 1>&2 "$1"
    echo 1>&2 "Usage: $(basename "$0") [install|uninstall]"
    exit 255
}

if [ "$#" -lt 1 ]; then
    fail "Invalid number of arguments."
fi

# Run installer

case "$1" in
    install)
        PHPSTORM_CONFIG_FOLDER_PREVIOUS="$(ls -a "${HOME}" | grep ".PhpStorm" | tail -n 1)"
        PHPSTORM_CONFIG_FOLDER_NEW="$(grep -E "(\.PhpStorm[0-9]{4}\.[0-9]+)" -o /snap/phpstorm/current/bin/phpstorm.sh | head -n 1)"
        if [ -n "${PHPSTORM_CONFIG_FOLDER_PREVIOUS}" ]; then
            if [ ${PHPSTORM_CONFIG_FOLDER_PREVIOUS} != "${PHPSTORM_CONFIG_FOLDER_NEW}" ]; then
                mv "${HOME}"/"${PHPSTORM_CONFIG_FOLDER_PREVIOUS}" "${HOME}"/"${PHPSTORM_CONFIG_FOLDER_NEW}"
            fi
            git -C "${HOME}"/"${PHPSTORM_CONFIG_FOLDER_NEW}"/config fetch origin --prune
            git -C "${HOME}"/"${PHPSTORM_CONFIG_FOLDER_NEW}"/config checkout --force origin/master
            rm -f -r $(ls -a "${HOME}" | grep ".PhpStorm" | grep -v "${PHPSTORM_CONFIG_FOLDER_NEW}")
        else
            mkdir -p "${HOME}/${PHPSTORM_CONFIG_FOLDER_NEW}"
            git clone "https://github.com/mauchede/phpstorm-config" "${HOME}"/"${PHPSTORM_CONFIG_FOLDER_NEW}"/config
        fi
        ;;

    uninstall)
        rm -f -r $(ls -a "${HOME}" | grep ".PhpStorm")
        ;;

    *)
        fail "Argument \"$1\" is invalid."
        ;;
esac
